                                        "publicApi": {
                                            "title": "Public API",
                                            "default": false,
                                            "type": "boolean"
                                        },
                                        "organizationId": {
                                            "title": "Organization identifier",
                                            "minLength": 1,
                                            "type": "string"
                                        },
                                        "apiId": {
                                            "title": "API identifier",
                                            "minLength": 1,
                                            "type": "string"
                                        },
                                        "version": {
                                            "title": "Version identifier",
                                            "minLength": 1,
                                            "type": "string"
                                        },
                                        "endpoint": {
                                            "title": "Endpoint URI",
                                            "minLength": 1,
                                            "type": "string"
                                        },
                                        "endpointType": {
                                            "title": "Endpoint type",
                                            "minLength": 1,
